# Database (PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/community_chat?schema=public

# JWT
JWT_SECRET=replace_with_a_strong_secret

# Google OAuth (for later)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FRONTEND_URL=http://localhost:3000
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# Server
PORT=4000
NODE_ENV=development

# Socket rate limits (tunable)
SOCKET_RATE_LIMIT_SEND_MESSAGES=5
SOCKET_RATE_LIMIT_SEND_WINDOW_MS=10000
SOCKET_RATE_LIMIT_EDIT_MESSAGES=10
SOCKET_RATE_LIMIT_EDIT_WINDOW_MS=10000

# Frontend
VITE_API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Uploads
# For production, consider using S3 or persistent storage. Local development uses ./uploads
UPLOADS_DIR=uploads
